travis.localdomain

# PostgreSQL database
[ginas_postgresql]
travis.localdomain

# NFS server
[ginas_nfs]
travis.localdomain

# ownCloud instance
[ginas_owncloud]
travis.localdomain

# phpIPAM instace
[ginas_phpipam]
travis.localdomain

# Samba server
[ginas_samba]
travis.localdomain

