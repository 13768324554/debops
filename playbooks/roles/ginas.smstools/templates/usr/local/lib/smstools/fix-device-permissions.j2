#!/bin/sh

# {{ ansible_managed }}

# Fix device permissions (needed in OpenVZ containers)

owner='root'
group='dialout'
mode='ug=rw'

{% if smstools_devices is defined and smstools_devices %}
{% for modem in smstools_devices %}
chown ${owner}:${group} {{ modem.device }}
chmod ${mode} {{ modem.device }}
{% endfor %}
{% endif %}

