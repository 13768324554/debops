# PRODUCTION
#
production:
  adapter: postgresql
  encoding: unicode
  database: {{ gitlab_database_config[gitlab_database].database }}
  pool: 10
  username: {{ gitlab_database_config[gitlab_database].username }}
{% if gitlab_postgresql_database_connection is defined %}
{% if gitlab_postgresql_database_connection == 'port' %}
  password: {{ gitlab_database_password }}
  host: {{ gitlab_database_config[gitlab_database].hostname }}
  port: {{ gitlab_database_config[gitlab_database].port }}
{% elif gitlab_postgresql_database_connection == 'socket' %}
  socket: {{ gitlab_database_config[gitlab_database].socket }}
{% endif %}
{% endif %}

