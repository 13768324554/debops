# {{ ansible_managed }}

[apt]
frontend=mail
email_address={{ apt_mail_notifications|d(['root']) | join(',') }}
confirm=0
which={{ apt_update_notifications_type_listchanges | default('news') }}
{% if apt_update_notifications_diff|d() %}
save_seen=/var/lib/apt/listchanges.db
{% endif %}

[apticron]
frontend=mail
email_address={{ apt_mail_notifications|d(['root']) | join(',') }}
confirm=0
which={{ apt_update_notifications_type_apticron | default('both') }}
{% if apt_update_notifications_diff|d() %}
save_seen=/var/lib/apt/listchanges.db
{% endif %}


